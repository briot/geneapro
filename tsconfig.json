{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "removeComments": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "inlineSourceMap": false,
      "preserveConstEnums": false,
      "noEmitOnError": false,
      "noImplicitAny": true,
      "allowUnreachableCode": false,
      "noFallthroughCasesInSwitch": true,
      "newLine": "LF"
   },
   "exclude": [
      "node_modules",
      "typings/main.d.ts",
      "typings/main"
   ],
   "filesGlob": [
      "./resources/ts/*.ts",
      "node_modules/awesome-typescript-loader/lib/runtime.d.ts",
      "typings/index.d.ts"
   ],
   "angularCompilerOptions": {
      "genDir": "./static/ngfactory"
  }
}
