{
  "name": "geneaprove",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "d3": "~5.14.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "~7.1.3",
    "react-router-dom": "~5.1.2",
    "react-virtualized": "~9.21.0",
    "redux": "~4.0.3",
    "redux-logger": "~3.0.6",
    "redux-persist": "~4.10.2",
    "redux-thunk": "~2.3.0",
    "semantic-ui-react": "~2.1.3"
  },
  "scripts": {
    "start": "concurrently --kill-others-on-fail -c='white,green,blue,red,cyan,cyan' -n 'pyth,vite,tsc ,lint,test,btes' '$npm_execpath run watch-back' '$npm_execpath run watch-vite' '$npm_execpath run watch-tsc' '$npm_execpath run watch-lint' '$npm_execpath run watch-test' '$npm_execpath run watch-test-backend'",
    "build": "tsc && vite build",
    "manage": "./python_env/bin/python3 ./backend/manage.py",
    "tests:backend": "$npm_execpath run manage test --parallel --verbosity=0 geneaprove",
    "watch-back": "$npm_execpath run manage migrate; $npm_execpath run manage runserver 8002",
    "watch-vite": "VITE_API_URL=127.0.0.1:8002 vite --clearScreen false",
    "watch-tsc": "tsc -w --preserveWatchOutput",
    "watch-lint": "esw -w --changed --ext .ts,.tsx frontend/src",
    "watch-pylint": "pylint --rcfile=backend/pylint.rc --reports=n backend/geneaprove/**/*py",
    "watch-test-coverage": "jest --coverage --watch",
    "watch-test": "jest --watch",
    "watch-test-backend": "npm-watch tests:backend",
    "pretty": "prettier --tab-width=3 --write 'src/**/*tsx'",
    "TO_BE_REMOVED_test": "(cd backend; ../python_env/bin/python ./manage.py test) && (CI=true react-scripts test --env=jsdom)",
    "TO_BE_REMOVED_jstest": "react-scripts test --env=jsdom --watch"
  },
  "watch": {
    "tests:backend": {
      "patterns": [
        "backend"
      ],
      "extensions": "py",
      "runOnChangeOnly": false
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "~5.11.9",
    "@testing-library/react": "~11.2.5",
    "@types/d3": "~5.7.2",
    "@types/jest": "~26.0.20",
    "@types/node": "~12.19.16",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/react-redux": "~7.1.3",
    "@types/react-router-dom": "~5.1.2",
    "@types/react-virtualized": "~9.21.0",
    "@typescript-eslint/eslint-plugin": "~5.27.1",
    "@typescript-eslint/parser": "~5.27.1",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "concurrently": "^6.2.1",
    "eslint": "^7.26.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-testing-library": "^4.5.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.3",
    "npm-watch": "^0.11.0",
    "prettier": "1.16.4",
    "react-testing-library": "~6.0.0",
    "ts-jest": "^26.5.6",
    "typescript": "~4.6.3",
    "typescript-fsa": "~2.5.0",
    "typescript-language-server": "^0.9.7",
    "vite": "^2.9.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
